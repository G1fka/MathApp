<UserControl x:Class="MathApp.IterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MathApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <TextBlock x:Name="CounterTextBlock" Width="70" Height="60" TextAlignment="Center" FontSize="20" Margin="0 0 15 0"/>
            <TextBlock x:Name="IntervalTextBlock" Width="200" Height="60" TextAlignment="Center" FontSize="20" Margin="15 0 0 0"/>
            <TextBlock x:Name="KsiTextBlock" Width="200" Height="60" TextAlignment="Center" FontSize="20" Margin="15 0 15 0"/>
            <TextBlock x:Name="ValueTextBlock" Width="200" Height="60" TextAlignment="Center" FontSize="20" Margin="15 0 15 0"/>
            <TextBlock x:Name="ConclusiontextBlock" Width="50" Height="60" TextAlignment="Center" FontSize="20" Margin="15 0 0 0"/>
        </StackPanel>  
    </Grid>
</UserControl>
