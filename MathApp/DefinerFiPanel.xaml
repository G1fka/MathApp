<UserControl x:Class="MathApp.DefinerFiPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MathApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0 0 0 20">
            <StackPanel>
                <TextBlock x:Name="FiTextBlock" Width="500" TextAlignment="Center" FontSize="16" Margin="0 0 15 10" TextWrapping="Wrap"/>
                <TextBlock x:Name="DerivativeTextBlock" Width="500" TextAlignment="Center" FontSize="16" Margin="0 0 15 0" TextWrapping="Wrap"/>
            </StackPanel>
            <StackPanel>
                <TextBlock x:Name="ValueStartTextBlock" Width="150" TextAlignment="Center" FontSize="16" Margin="15 0 0 10" TextWrapping="Wrap"/>
                <TextBlock x:Name="ValueEndTextBlock" Width="150" TextAlignment="Center" FontSize="16" Margin="15 0 0 0" TextWrapping="Wrap"/>
            </StackPanel>
            <TextBlock x:Name="ConclusiontextBlock" Width="100" TextAlignment="Center" FontSize="16" Margin="15 0 0 0" TextWrapping="Wrap" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
